<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style/styles.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  </head>
    <title>Tenant History</title>
</head>
<body style="background-color: #8cb9bd">
    <div
      class="container m-4 text-center pt-2"
      style="
        background-color: #dae7e7;
        border-radius: 8px;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
        width: 95%;
        max-width: 95%;
        height: 95vh;
        max-height: 95%;
      "
    >
    <%- include('navbar.ejs') %>
    <h3 class="text-center">Rental History</h3>

    <div class="table-responsive">
        <table class="table table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>Room</th>
                    <th>Month</th>
                    <th>Rent Fee</th>
                    <th>Water Bill</th>
                    <th>Electricity Bill</th>
                    <th>Other Charges</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% history.forEach(record => { %>
                <tr>
                    <td><%= record.room_id %></td>
                    <td><%= record.month %></td>
                    <td><%= record.rent_fee %></td>
                    <td><%= record.water_bill %></td>
                    <td><%= record.electricity_bill %></td>
                    <td><%= record.additional_expenses %></td>
                    <td><strong><%= record.status_text %></strong></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
            </tbody>
        </table>
    </div>
</body>
</html>